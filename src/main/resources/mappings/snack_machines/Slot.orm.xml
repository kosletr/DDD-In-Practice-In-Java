<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">

    <entity class="com.example.demo.snack_machines.Slot" name="Slot">
        <attribute-override name="id">
            <column name="slot_id"/>
        </attribute-override>
        <attributes>
            <basic name="position" access="FIELD">
                <column name="position" />
            </basic>
            <many-to-one name="snackMachine" access="FIELD">
                <join-column name="snack_machine_id"/>
            </many-to-one>
            <embedded name="snackPile" access="FIELD"/>
        </attributes>
    </entity>

    <embeddable class="com.example.demo.snack_machines.SnackPile" access="FIELD">
        <attributes>
            <basic name="price"/>
            <basic name="quantity"/>
            <one-to-one name="snack">
                <join-column name="snack_id" />
            </one-to-one>
        </attributes>
    </embeddable>
</entity-mappings>
